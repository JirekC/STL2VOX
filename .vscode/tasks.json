{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: compile all",
			"command": "g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"*.cpp",
				"../lib/f3d/*.cpp",
				"../lib/glad/*.o",
				"../lib/GLFW/libglfw3dll.a",
				"-o",
				"STL2VOX.exe", 
				"-I.",
				"-I../lib"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: g++"
		}
	]
}